{
	"compilerOptions": {
		"locale": "ru",
		"sourceMap": true,
		"module": "commonjs",
		"strict": true,
		"newLine": "lf",
		"importHelpers": true,
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./dist/"
	},
	"include": ["src/**/*"]
}
